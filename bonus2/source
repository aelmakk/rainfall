#include <stdio.h>
#include <string.h>
#include <unistd.h>

int language;


void greetuser(char *str) // str ==> argv[1]
{
    char msg[32];
    
    if (language == 1) {
      memcpy(msg, "Hyvää päivää ", 18); // good day
    }
    else if (language == 2) {
      memcpy(msg, "Goedemiddag! ", 13); //good afternoon
    }
    else if (language == 0) {
      memcpy(msg, "Hello ", 6); 
    }
    strcat(msg, str); // str is at ebp +8 , argv[1]
    puts(msg);
    return;
}

int     main(int argc, char *argv[])
{
    char *lang;
    void *ptr;
    int flag;
    char stack_buff[80];
    char buff1 [40];
    char buff2 [32];

    flag = 0;
    if (argc == 3)
    {
        ptr = /.,mn;
        bzero(buff1, 19 * 4);
        strncpy(buff1, argv[1], 40);
        strncpy(buff2, argv[2], 32);
        lang = getenv("LANG");
        if (lang) {
            if (memcmp(lang, "fi", 2) == 0)
              language = 1;
            else if (memcmp(lang, "nl", 2) == 0)
                language = 2;
        }
        // copy the buff1,buff2 in stack_buff
        greetuser(buff1);
    }

    return (0);
}